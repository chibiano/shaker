                <ColumnDefinition Width="246*" />
            </Grid.ColumnDefinitions>
            <Image Source="images/fade.png" Name="fade_layer" HorizontalAlignment="Center" Stretch="Fill" VerticalAlignment="Center" Width="480" Height="617" Grid.ColumnSpan="2" />
